{
	"info": {
		"_postman_id": "92770568-62ac-41ff-9bd8-1a7cc4f5c5aa",
		"name": "BPFCAudit",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Create Service",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var json = pm.response.json();",
							"",
							"pm.environment.set(\"serviceId\", json.data.id);",
							"",
							"pm.test(\"Status code is 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/vnd.api+json",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "application/vnd.api+json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n   \"data\":{\n      \"type\": \"{{services}}\",\n      \"attributes\":{\n         \"name\": \"myService\"\n      }\n   }\n}"
				},
				"url": {
					"raw": "http://{{host}}/{{appName}}/{{api}}/{{v1}}/{{services}}",
					"protocol": "http",
					"host": [
						"{{host}}"
					],
					"path": [
						"{{appName}}",
						"{{api}}",
						"{{v1}}",
						"{{services}}"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Service",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://{{host}}/{{appName}}/{{api}}/{{v1}}/{{services}}/{{serviceId}}?included={{captures}}",
					"protocol": "http",
					"host": [
						"{{host}}"
					],
					"path": [
						"{{appName}}",
						"{{api}}",
						"{{v1}}",
						"{{services}}",
						"{{serviceId}}"
					],
					"query": [
						{
							"key": "included",
							"value": "{{captures}}"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Services",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://{{host}}/{{appName}}/{{api}}/{{v1}}/{{services}}?included={{captures}}",
					"protocol": "http",
					"host": [
						"{{host}}"
					],
					"path": [
						"{{appName}}",
						"{{api}}",
						"{{v1}}",
						"{{services}}"
					],
					"query": [
						{
							"key": "included",
							"value": "{{captures}}"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Start Capture",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var json = pm.response.json();",
							"",
							"pm.environment.set(\"captureId\", json.data.id);",
							"",
							"pm.test(\"Status code is 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"var moment = require('moment');",
							"",
							"var endTime = moment.utc().add(5, 'minutes');",
							"",
							"pm.environment.set(\"captureEndTime\", endTime.toISOString());"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/vnd.api+json",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "application/vnd.api+json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n   \"data\":{\n      \"type\": \"{{captures}}\",\n      \"attributes\":{\n         \"endTime\": \"{{captureEndTime}}\",\n         \"serviceId\": {{serviceId}}\n      }\n   }\n}"
				},
				"url": {
					"raw": "http://{{host}}/{{appName}}/{{api}}/{{v1}}/{{captures}}",
					"protocol": "http",
					"host": [
						"{{host}}"
					],
					"path": [
						"{{appName}}",
						"{{api}}",
						"{{v1}}",
						"{{captures}}"
					]
				}
			},
			"response": []
		}
	]
}